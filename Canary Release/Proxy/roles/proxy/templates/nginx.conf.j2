#user  nobody;
worker_processes  1;

#error_log  logs/error.log;
#error_log  logs/error.log  notice;
#error_log  logs/error.log  info;

#pid        logs/nginx.pid;

events {
    worker_connections  1024;
}

http {
    include       mime.types;
    default_type  application/octet-stream;

    sendfile        on;
    keepalive_timeout  65;

    client_max_body_size 20m;

	 ## node.js
    upstream app_nodejs {
       server ec2-54-145-165-113.compute-1.amazonaws.com;
       server ec2-34-207-65-237.compute-1.amazonaws.com;
    }

    #gzip  on;

	 ## Servers
	 include /etc/nginx/sites-available/*;
}
